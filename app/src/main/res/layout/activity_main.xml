<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#E0E0E0"
        android:gravity="end"
        android:padding="16dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="/"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toEndOf="@+id/btnBS"
        app:layout_constraintTop_toBottomOf="@+id/tvResult"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnCE"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:text="CE"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toStartOf="@+id/btnC"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResult"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:text="C"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toStartOf="@+id/btnBS"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toEndOf="@+id/btnCE"
        app:layout_constraintTop_toBottomOf="@+id/tvResult"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnBS"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:text="BS"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toStartOf="@+id/btnDivide"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toEndOf="@+id/btnC"
        app:layout_constraintTop_toBottomOf="@+id/tvResult"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="7"
        android:layout_marginRight="5dp"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15" />

    <!-- Button 8 -->

    <Button
        android:id="@+id/btn8"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="8"
        android:layout_marginRight="5dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toStartOf="@+id/btn9"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btnC"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Button 9 -->
    <Button
        android:id="@+id/btn9"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:text="9"
        android:layout_marginRight="5dp"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBS"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintEnd_toStartOf="@+id/btnX"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15" />

    <!-- Button X-->
    <Button
        android:id="@+id/btnX"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="x"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDivide"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15" />

    <!-- Các hàng còn lại tiếp tục tương tự -->
    <!-- Button 4 -->
    <Button
        android:id="@+id/btn4"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="4"
        android:layout_marginRight="5dp"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15" />
    <!-- Button +/-, 0, . và = -->

    <!-- Button 7 -->
    <Button
        android:id="@+id/btn5"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="5"
        android:layout_marginRight="5dp"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btn8"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintEnd_toStartOf="@+id/btn6"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="6"
        android:layout_marginRight="5dp"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btn9"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintEnd_toStartOf="@+id/btnMinus"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="-"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btnX"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintEnd_toEndOf="parent"/>




    <Button
        android:id="@+id/btn1"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="1"
        android:layout_marginRight="5dp"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="2"
        android:layout_marginRight="5dp"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btn5"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15" />

    <!-- Button 3 -->
    <Button
        android:id="@+id/btn3"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:text="3"
        android:layout_marginRight="5dp"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btn6"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintEnd_toStartOf="@+id/btnPlus"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15" />

    <!-- Button +-->


    <Button
        android:id="@+id/btnPlus"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="+"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btnMinus"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnPlusMinus"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="+/-"
        android:layout_marginRight="5dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toStartOf="@+id/btn0"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="0"
        android:layout_marginRight="5dp"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        app:layout_constraintStart_toEndOf="@+id/btnPlusMinus"
        app:layout_constraintEnd_toStartOf="@+id/btnDot"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="."
        android:layout_marginRight="5dp"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintEnd_toStartOf="@+id/btnEquals"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.15" />

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="91dp"
        android:layout_height="95dp"
        android:layout_weight="1"
        android:text="="
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintStart_toEndOf="@+id/btnDot"
        app:layout_constraintTop_toBottomOf="@+id/btnPlus"
        app:layout_constraintWidth_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>
